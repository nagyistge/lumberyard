def build(bld):

    bld.CryQtApplication(
        # Settings
        target                      = 'LuaIDE',
        vs_filter                   = 'Tools',
        file_list                   = ['woodpecker.waf_files','lua_ide.waf_files'],
        win_file_list               = 'lua_ide_win.waf_files',
        platforms                   = ['win'],
        configurations              = ['debug', 'debug_test', 'profile', 'profile_test'],
        disable_pch                 = True,
        features                    = ['qt5','generate_rc_file'],
        use                         = ['AzCore',
                                       'AzFramework',
                                       'AzToolsFramework',
                                       'GridMateForTools'],
        uselib                      = ['QTANGLE',
                                       'QTMAIN',
                                       'QT5CORE',
                                       'QT5GUI',
                                       'QT5OPENGL',
                                       'QT5NETWORK',
                                       'QT5SVG',
                                       'QT5WIDGETS',
                                       'CRASHPAD'],
        defines                     = [ 'UNICODE', 'WOODPECKER_ENABLE_LUA_IDE' ],
        copy_dependent_files        = [ 'Bin64/d3dcompiler_47.dll',
                                        'Bin64/libEGL.dll',
                                        'Bin64/libGLESv2.dll',
                                        'Bin64/libEGLd.dll',
                                        'Bin64/libGLESv2d.dll'],
        # Platform Specific
        win_use                 = bld.make_aws_library_task_list(['LyMetricsProducer', 'LyIdentity']),
        win_includes            = ['./Woodpecker/Editor',],
        win_cxxflags            = [
            '/W4', # warning level
        ],
        win_lib                 = [ 'shell32' ],

        darwin_rpath            = ['@executable_path/../Bin64/qtlibs/Frameworks'],
        darwin_frameworkpath    = [bld.CreateRootRelativePath('Code/Sandbox/SDKs/Qt/lib')],
        darwin_cxxflags         = [
            '-Werror',  # warnings as errors
            '-Wall',  # warning level
        ]

    )

    bld.CryQtApplication(
        # Settings
        target                      = 'Profiler',
        vs_filter                   = 'Tools',
        file_list                   = ['woodpecker.waf_files','profiler.waf_files'],
        win_file_list               = 'profiler_win.waf_files',
        platforms                   = ['win'],
        configurations              = ['debug', 'debug_test', 'profile', 'profile_test'],
        disable_pch                 = True,
        copy_dependent_files        = [ bld.Path('Bin64/d3dcompiler_47.dll'),
                                        bld.Path('Bin64/libEGL.dll'),
                                        bld.Path('Bin64/libGLESv2.dll'),
                                        bld.Path('Bin64/libEGLd.dll'),
                                        bld.Path('Bin64/libGLESv2d.dll')],
        features                    = ['qt5','generate_rc_file'],
        use                         = ['AzCore',
                                       'AzFramework',
                                       'AzToolsFramework',
                                       'GridMateForTools'],
        uselib                      = ['QTANGLE',
                                       'QTMAIN',
                                       'QT5CORE',
                                       'QT5GUI',
                                       'QT5OPENGL',
                                       'QT5NETWORK',
                                       'QT5SVG',
                                       'QT5WIDGETS'],

        defines                 = [ 'UNICODE', 'WOODPECKER_ENABLE_PROFILER' ],

        # Platform Specific
        win_use                 = bld.make_aws_library_task_list(['LyMetricsProducer', 'LyIdentity']),
        win_includes            = ['./Woodpecker/Editor',],
        win_cxxflags = [
            '/W4', # warning level
            ],
        darwin_rpath            = ['@executable_path/../BinMac64/qtlibs_mac/Frameworks' ],
        darwin_frameworkpath    = [bld.CreateRootRelativePath('Code/Sandbox/SDKs/Qt/lib')],
        darwin_cxxflags = [
            '-Werror', # warnings as errors
            '-Wall', # warning level
            ],

        win_lib =[ 'shell32' ]
    )
